{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    // "sourceMap": false,
    "noEmitOnError": true,
    "noImplicitAny": false,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src"],
  "references": [{ "path": "./tsconfig.browser.json" }]
}
